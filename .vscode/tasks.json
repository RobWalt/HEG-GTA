{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo run example",
            "type": "shell",
            "command": "cargo run --example ${fileBasenameNoExtension}",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo run",
            "type": "shell",
            "command": "cargo run",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
              "kind": "build",
              "isDefault": true
            }
        },
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo format",
            "type": "shell",
            "command": "cargo fmt",
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}
